<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3ecff"
        tools:context=".MenuActivity">

    <RadioGroup
            android:layout_height="112dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/radioGroup">
        <RadioButton
                android:text="OnePlayer"
                android:background="#ffff00"
                android:layout_width="match_parent"
                android:id="@+id/radioButton" android:layout_weight="1" android:layout_height="wrap_content"
                android:textSize="18sp" android:textColorLink="@android:color/background_light"/>
        <RadioButton
                android:text="TwoPlayers"
                android:background="#e6e600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
                android:textSize="18sp" android:textColorLink="@android:color/background_light"/>
    </RadioGroup>
    <Button
            android:text="START"
            android:background="#99e600"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/startButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.524" android:textSize="24sp"/>
    <TextView
            android:text="Choose Players"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/playersText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            android:textSize="24sp"
    />
</android.support.constraint.ConstraintLayout>